{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "resolved_day_log_entry.v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "log_version",
    "date",
    "status",
    "session_ids",
    "summary"
  ],
  "properties": {
    "log_version": {
      "const": "closed_loop.v1"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "done",
        "skipped"
      ]
    },
    "plan_version": {
      "type": [
        "string",
        "null"
      ]
    },
    "start_date": {
      "type": [
        "string",
        "null"
      ]
    },
    "location": {
      "type": [
        "string",
        "null"
      ]
    },
    "gym_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "session_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "resolved_ref": {
      "type": [
        "string",
        "null"
      ]
    },
    "planned": {
      "type": "array"
    },
    "actual": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "exercise_feedback_v1": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/exerciseFeedback"
          }
        }
      }
    },
    "notes": {
      "type": "string"
    },
    "summary": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "session_count",
        "status",
        "categories",
        "session_ids"
      ],
      "properties": {
        "session_count": {
          "type": "integer",
          "minimum": 0
        },
        "status": {
          "type": "string",
          "enum": [
            "done",
            "skipped"
          ]
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "session_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "schema_version": {
      "type": [
        "string",
        "null"
      ]
    },
    "actual_feedback_v1": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/exerciseFeedback"
      }
    }
  },
  "$defs": {
    "exerciseFeedback": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "exercise_id",
        "feedback_label",
        "completed"
      ],
      "properties": {
        "exercise_id": {
          "type": "string",
          "minLength": 1
        },
        "feedback_label": {
          "type": "string",
          "enum": [
            "very_easy",
            "easy",
            "ok",
            "hard",
            "very_hard"
          ]
        },
        "completed": {
          "type": "boolean"
        },
        "used_total_load_kg": {
          "type": "number"
        },
        "used_external_load_kg": {
          "type": "number"
        },
        "used_grade": {
          "type": "string"
        },
        "surface_selected": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
