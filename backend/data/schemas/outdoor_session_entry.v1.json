{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OutdoorSessionEntry",
  "description": "Schema for a single outdoor climbing session log entry",
  "type": "object",
  "required": ["log_version", "date", "spot_name", "discipline", "duration_minutes", "routes"],
  "properties": {
    "log_version": {
      "type": "string",
      "const": "outdoor.v1"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Session date YYYY-MM-DD"
    },
    "spot_id": {
      "type": "string",
      "description": "Reference to outdoor_spots[].id (optional, for saved spots)"
    },
    "spot_name": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the crag / bouldering area"
    },
    "discipline": {
      "type": "string",
      "enum": ["lead", "boulder", "both"]
    },
    "duration_minutes": {
      "type": "integer",
      "minimum": 1
    },
    "conditions": {
      "type": "object",
      "properties": {
        "temperature_c": { "type": "number" },
        "humidity": { "type": "string", "enum": ["low", "medium", "high"] },
        "rock_condition": { "type": "string", "enum": ["dry", "damp", "wet"] },
        "wind": { "type": "string", "enum": ["none", "light", "strong"] }
      },
      "additionalProperties": false
    },
    "routes": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["name", "grade", "attempts"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "grade": { "type": "string", "minLength": 1, "description": "Grade in Font or French scale" },
          "discipline": { "type": "string", "enum": ["lead", "boulder"] },
          "style": { "type": "string", "enum": ["onsight", "flash", "redpoint", "project", "repeat"] },
          "attempts": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["result"],
              "properties": {
                "result": { "type": "string", "enum": ["sent", "fell", "topped_out"] },
                "notes": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "notes": {
      "type": "string",
      "description": "Session-level notes"
    },
    "energy_level": {
      "type": "string",
      "enum": ["very_low", "low", "ok", "high", "very_high"]
    },
    "overall_feeling": {
      "type": "string",
      "enum": ["very_easy", "easy", "ok", "hard", "very_hard"]
    }
  },
  "additionalProperties": false
}
