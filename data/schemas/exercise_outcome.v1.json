{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "required": ["exercise_id", "planned"],
  "properties": {
    "exercise_id": { "type": "string", "minLength": 1 },
    "planned": { "type": "object", "additionalProperties": true },
    "actual": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "status": { "type": "string", "enum": ["planned", "done", "skipped", "modified"] },
        "difficulty": {
          "type": "string",
          "enum": ["too_easy", "easy", "ok", "hard", "too_hard", "fail"]
        },
        "rpe": { "type": "number" }
      }
    }
  }
}
