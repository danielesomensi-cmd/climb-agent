{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "profile_intake.v1.json",
  "title": "Profile Intake v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version"
  ],
  "properties": {
    "schema_version": {
      "const": "profile_intake.v1"
    },
    "equipment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "gyms": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "gym_id",
              "name",
              "equipment"
            ],
            "properties": {
              "gym_id": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "equipment": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "availability": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "available"
          ],
          "properties": {
            "available": {
              "type": "boolean"
            },
            "preferred_location": {
              "type": "string"
            },
            "gym_id": {
              "type": [
                "string",
                "null"
              ]
            },
            "locations": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "planning_prefs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target_training_days_per_week": {
          "type": "integer",
          "minimum": 1,
          "maximum": 7
        },
        "hard_day_cap_per_week": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        },
        "default_gym_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "location": {
          "type": "string"
        }
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "location": {
          "type": "string"
        },
        "gym_id": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
