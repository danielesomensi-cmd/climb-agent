{
  "id": "core_short",
  "name": "Core Short (Module)",
  "version": "1.0",
  "category": "core_module",
  "sports": ["climbing"],
  "disciplines": ["boulder", "lead", "mixed"],

  "compatible_slots": ["short", "medium", "long"],

  "requires_environment": {
    "equipment_any_of": ["mat", "floor", "parallettes"]
  },

  "goals": ["trunk_stiffness", "anti_extension", "hip_flexor_strength"],

  "stress_tags": {
    "fingers": "none",
    "cns": "low",
    "elbow": "low",
    "skin": "none"
  },

  "scheduling_rules": {
    "max_per_day": 1,
    "avoid_if": ["severe_shoulder_pain"],
    "notes": "Good as add-on after climbing or finger strength. Keep quality high; stop if lumbar compensation."
  },

  "blocks": [
    {
      "block_id": "main",
      "type": "main_set",
      "duration_min": 12,

      "exercise_selection": {
        "library": "catalog/exercises/v1/exercises.json",

        "primary": {
          "match_all_tags": ["stim:core"],
          "exclude_any_tags": ["tool:hangboard", "protocol:max_hang", "stim:finger_max_strength"],
          "prefer_exercise_ids": ["core_hollow_hold", "core_l_sit"]
        },

        "fallback": [
          {
            "match_any_tags": ["stim:core"],
            "exclude_any_tags": ["tool:hangboard", "protocol:max_hang", "stim:finger_max_strength"]
          }
        ],

        "diversity_rules": {
          "avoid_same_exercise_within_days": 2
        }
      },

      "prescription_overrides": {
        "sets_range": [3, 5],
        "rest_seconds_range": [45, 75],
        "notes": [
          "Pick 1 core exercise. If time allows, add a second set block in future versions.",
          "Keep pelvis posterior tilt (no arching). Stop 1 rep before form breaks."
        ]
      }
    }
  ],

  "module_notes": "Short core add-on. Minimal selection rules to avoid accidental finger exercises."
}

